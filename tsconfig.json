{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*.ts", "index.ts", "src/*.ts"],
  "exclude": ["node_modules", "dist"]
}